require "rubygems"
gem "rspec"
gem "selenium-client"
require "selenium/client"
require "selenium/rspec/spec_helper"
require "spec/test/unit"

describe "Paypal Express Checkout" do
  attr_reader :selenium_driver
  alias :page :selenium_driver

  before(:all) do
    @verification_errors = []
    @selenium_driver = Selenium::Client::Driver.new \
      :host => "localhost",
      :port => 4444,
      :browser => "*chrome",
      :url => "http://localhost:3000/",
      :timeout_in_second => 60
  end

  before(:each) do
    @selenium_driver.start_new_browser_session
  end
  
  append_after(:each) do
    @selenium_driver.close_current_browser_session
    @verification_errors.should == []
  end
  
  it "test_paypal _express _checkout" do
    page.open "/"
    page.click "css=img[alt=\"Btn_xpresscheckout\"]"
    page.wait_for_page_to_load "30000"
    page.type "id=login_email", "amy_1342401985_per@gmail.com"
    page.type "id=login_password", "342401932"
    page.click "id=submitLogin"
    page.wait_for_page_to_load "30000"
    page.click "//*[@name='esign_opt_in']"
    page.click "id=agree"
    page.wait_for_page_to_load "30000"
    page.click "id=continue_abovefold"
    page.wait_for_page_to_load "30000"
    begin
        page.is_text_present("Thank you for ordering!").should be_true
    rescue ExpectationNotMetError
        @verification_errors << $!
    end
  end
end
