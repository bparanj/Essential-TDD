<section id="vio-all-forms">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), 
						 :html => {:multipart => true, class: "vio-section vio-form"}) do |f| %>
	<legend> Sign in </legend>
	
	<fieldset>
		<div class="form-element">
			<label class="string required control-label" for="name">
				<abbr title="required">*</abbr> Email				
			</label>
			<%= f.email_field :email, required: 'required' %>
		</div>

		<div class="form-element">
			<label class="string required control-label" for="email">
				<abbr title="required">*</abbr> Password
			</label>
			<%= f.password_field :password, required: 'required' %>
		</div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

		<div class="form-element form-option-buttons">
			<%= f.submit('Signin', class: 'btn btn-primary')%>
			<%= link_to 'Cancel', products_path, class: 'btn' %>
		</div>
	</fieldset>	
	
<% end %>

<%= render "devise/shared/links" %>

</section>
