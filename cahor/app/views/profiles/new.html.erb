<section id="vio-all-forms">

<%= form_tag(profile_url, :html => {:multipart => true, class: "vio-section vio-form"}) do %>
  <legend> Payment Settings </legend>

	<fieldset>
		<div class="form-element">
			<label class="string required control-label" for="paypal_email">
				<abbr title="required">*</abbr> PayPal Email				
			</label>
			<%= text_field_tag "primary_paypal_email", "", :size => 40, required: 'required'  %>
		</div>

		<div class="form-element form-option-buttons">
			<%= submit_tag('Save', class: 'btn btn-primary')%>
			<%= link_to 'Cancel', :back, class: 'btn' %>
		</div>
	</fieldset>	
					
<% end %>

</section>
