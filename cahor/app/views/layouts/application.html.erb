<!DOCTYPE html>
<html>
<head>
  <title>Rubyplus</title>

  <%= stylesheet_link_tag  "application", :media => "all" %>
  <%= stylesheet_link_tag  "reset", :media => "all" %>
  <%= stylesheet_link_tag  "typography", :media => "all" %>
  <%= stylesheet_link_tag  "global", :media => "all" %>
  <%= stylesheet_link_tag  "navbar", :media => "all" %>
  <%= stylesheet_link_tag  "buttons", :media => "all" %>
  <%= stylesheet_link_tag  "form", :media => "all" %>
  <%= stylesheet_link_tag  "vio", :media => "all" %>

  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="page-wrapper">

		<% if user_signed_in? %> 
  	  <%= render partial: 'shared/saas_header' %>		
		<% else %>
  	  <%= render partial: 'shared/header' %>
		<% end %>

		<section id="page-content">
			<% if user_signed_in? %> 
				<%= render partial: 'shared/saas_navigation' %>		
			<% else %>
	  	  <%= render partial: 'shared/navigation' %>
			<% end %>
			
			<%= yield %>
			
		</section>
	</div>

</body>
</html>