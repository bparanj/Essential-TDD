<section id="vio-all-forms">
	
<%= form_for(@feedback, html: { class: "vio-section vio-form" }) do |f| -%>
  <legend> Contact Us </legend>

  <%= render "shared/error_messages", target: @feedback %>  
  <div class="field">
	<%= f.label :name %><br/>
	<%= f.text_field :name, required: 'required' %>	
  </div>
  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.text_field :email, required: 'required' %>
  </div>
  <p>
    <%= f.label :message, "Message" %><br />
    <%= f.text_area :message, size: "50x20" %>
  </p>
	<%= f.submit('Send Message', class: 'btn btn-primary')%>
<% end -%>

</section>
