<section id="vio-all-forms">

<%= form_for(@product, :html => {:multipart => true, id: "vio-product-edit-form", class: "vio-section vio-form"}) do |f| %>
  <legend> New Product </legend>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<fieldset>
		<div class="form-element">
			<%= f.label :name %>
			<%= f.text_field :name, required: 'required' %>
		</div>

		<div class="form-element">
 			<%= f.label :price %>
 			<%= f.text_field :price, style: 'width: 100px', required: 'required' %>
		</div>
		
		<div class="form-element">
			<%= f.label :sales_page, 'Sales Page' %>
			<%= f.text_field :sales_page %>
		</div>

		<div class="form-element">
			<%= f.label :thanks_page, 'Thanks Page' %>
			<%= f.text_field :thanks_page %>
		</div>

		<div class="form-element">
			<%= f.label :cancel_page, 'Cancel Page' %>
			<%= f.text_field :cancel_page %>
		</div>

		<div class="form-element">
			<%= f.label :upload_file, 'Upload File' %>
	    <%= f.file_field :file %>
		</div>

		<div class="form-element form-option-buttons">
			<%= f.submit('Save', :class => 'btn btn-cant-think-of-a-name-5')%>
			<button data-toggle="dropdown" class="btn btn-cant-think-of-a-name-5 edit-form-btn-cancel"> Cancel </button>				
		</div>
	</fieldset>	
					
<% end %>

</section>
